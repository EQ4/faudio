
/**
    @addtogroup FaDynamic
    
    Provides dynamic typing.     
 */

module Fa.Dynamic
{
    import Fa;
    import Fa.String;

    type TypeRepr = enum {                   
        BoolTypeRepr, 
        I8TypeRepr, 
        I16TypeRepr, 
        I32TypeRepr, 
        I64TypeRepr,
        F32TypeRepr,
        F64TypeRepr,
        PairTypeRepr, 
        ListTypeRepr, 
        SetTypeRepr, 
        MapTypeRepr, 
        StringTypeRepr,
        RatioTypeRepr
    };

    type Dynamic = struct {
        getType : (Ptr -> TypeRepr)*
    };
        
    check : Ptr -> Bool;
    getType : Ptr -> TypeRepr;
}


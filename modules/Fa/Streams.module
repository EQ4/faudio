
/**
    Provides external streams.

    @since
        2.9
 */
module "transient" Fa.Streams
{
    import Fa;
    import Fa.Buffer;

    type SourceInterface = struct {
        read : ((Ptr, Buffer) -> Void)*,
        more : (Ptr -> Bool)*
    };                 

    type SinkInterface = struct {
        write : ((Ptr, Buffer) -> Void)*,
        close : (Ptr -> Void)*
    };                 

    type Source = opaque;
    type Sink = opaque;

    sourceRead : (Source, Buffer) -> Void;
    sourceMore : Source -> Bool;
    sinkWrite : (Sink, Buffer) -> Void;
    sinkClose : Sink -> Void;

}



/** 
    @addtogroup DoremirBuffer
    
    Low-level buffer data structure.

    @par Implements 
        doremir_destroy_t
        doremir_string_show_t
 */
module Doremir.Buffer
{
    import Doremir.Std;

    type Buffer = opaque;

    create  : (Size) -> Buffer;
    copy    : Buffer -> Buffer;
    resize  : (Size, Buffer) -> Buffer;
    destroy : Buffer -> Void;

    size : Buffer -> Size;  
    peek : (Buffer, Int) -> UInt8;
    poke : (Buffer, Int, UInt8) -> Void;
}
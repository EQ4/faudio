
/** 
    @addtogroup Doremir
    @addtogroup Buffer
    
    Low-level buffer data structure.

 */
module Doremir.Buffer
{
    import Doremir.Std;

    type Buffer = opaque;

    create : (Size) -> Buffer;
    copy : Buffer -> Buffer;
    swap : (Buffer, Buffer) -> Void;
    destroy : Buffer -> Void;

    size : Buffer -> Size;  
    peek : (Buffer, Int) -> UInt8;
    poke : (Buffer, Int, UInt8) -> Void;
}
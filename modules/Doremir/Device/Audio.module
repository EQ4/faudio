
/**
    @addtogroup DoremirDeviceAudio
    
    Real-time audio device.
    
 */
module Doremir.Device.Audio
{
    import Doremir.List;
    import Doremir.Pair;
    import Doremir.Processor;

    type Session = opaque;
    type Stream = opaque;
    type Audio = opaque;

    withSession : (() -> Session)* -> Void;
    beginSession : () -> Session;
    endSession : Session -> Void;

    devices : Session -> List;
    standard : Session -> Pair;
    standardInput : Session -> Audio;
    standardOutput : Session -> Audio;
    
    withStream : ((Audio, Processor, Audio) -> Stream)* -> Void;
    startStream : (Audio, Processor, Audio) -> Stream;
    stopStream : Stream -> Void;
    
}
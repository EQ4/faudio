
/** 
    @addtogroup DoremirAudioEngine
    
    This modules exports the entire audio engine. Example usage:
    
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{.c}

    #import <doremir/audio_engine.h>
    
    int main (int argc, char const *argv[])
    {
        doremir_audio_engine_initialize();
        
        ...

        doremir_audio_engine_terminate();
        return 0;
    }
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    
 */
module Doremir.AudioEngine
{                       
    import Doremir.Atomic;
    import Doremir.Atomic.Queue;
    import Doremir.Atomic.RingBuffer;
    import Doremir.Error;
    import Doremir.Device.Audio;
    import Doremir.Device.Midi;  
    import Doremir.Device.File;
    import Doremir.Message;
    import Doremir.Midi;
    import Doremir.Processor;
    import Doremir.Scheduler;
    import Doremir.Thread;
    import Doremir.Time;
    
    initialize : () -> Void;
    terminate : () -> Void;

    type Logger = ((SystemTime, Ptr) -> Void)*;
    
    setLogFile : FilePath -> Void;
    setLogStd : () -> Void;
    setLog : Logger -> Void;
}
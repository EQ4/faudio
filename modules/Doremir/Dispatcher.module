
/**
    @addtogroup DoremirDevice
    
    Provides input and output devices.
    
 */

/**
    @addtogroup DoremirDispatcher
    
    Provides message dispatching.
    
 */
module Doremir.Dispatcher
{
    import Doremir.Std;
    import Doremir.List;

    type Message = List;
    type Address = Intptr;


    /** @interface doremir_dispatcher_sender_t */
    type Sender = struct {
        send : ((Address, List) -> Void)*
    };

    /** @interface doremir_dispatcher_receiver_t */
    type Receiver = struct {
        receive : (Sender* -> Void)*
    };

    /** @interface doremir_dispatcher_t */
    type Dispatcher = struct {
        send : ((Address, List) -> Void)*,
        receive : (Sender* -> Void)*
    };
}

/** 
    @addtogroup Doremir
    @addtogroup Atomic
    
    Cross-platform atomic variables. Submodules contains lock-free data structures.

 */
module Doremir.Atomic
{
    import Doremir.Std;
    
    type Atomic = opaque;
    type Updater = (Intptr -> Intptr)*;

    create  : () -> Atomic;
    copy    : Atomic -> Atomic;
    swap    : (Atomic, Atomic) -> Void;
    destroy : Atomic -> Void;

    get     : Atomic -> Intptr;
    set     : (Atomic, Intptr) -> Void;
    modify  : (Atomic, Updater) -> Void;
}



/** 
    @addtogroup Doremir
    @addtogroup Atomic
    
    Cross-platform atomic variables. Submodules contains lock-free data structures.

 */
module Doremir.Atomic
{
    import Doremir.Std;
    
    type Atomic = opaque;
    type Value = Intptr;
    type Updater = (Value -> Value)*;

    create  : () -> Atomic;
    copy    : Atomic -> Atomic;
    swap    : (Atomic, Atomic) -> Void;
    destroy : Atomic -> Void;

    exchange : (Atomic, Value) -> Bool;
    add     : (Atomic, Value) -> Void;
    get     : Atomic -> Value;
    modify  : (Atomic, Updater) -> Void;
    set     : (Atomic, Value) -> Void;
}


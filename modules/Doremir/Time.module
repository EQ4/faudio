
/**
    @addtogroup DoremirTime
    
    Provides a time representation.
    
 */
module Doremir.Time
{     
    import Doremir;
    import Doremir.Ratio;
    
    type Unit = enum {
        Second,
        Minute,
        Hour,
        Day
    };

    type Time = struct {
        value : Ratio,
        unit : Unit
    };
}
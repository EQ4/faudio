
/** 
    @addtogroup DoremirMap
    
    Immutable ordered map data structure.

    @par Literals
    - `map(string("name"),           string("hans"), 
           string("favouriteColor"), string("blue"))`

    @par Requires 
    - doremir_order_t

    @par Implements 
    - doremir_equal_t
    - doremir_copy_t
    - doremir_destroy_t
    - doremir_dynamic_t
    - doremir_string_show_t

    @see 
    - @ref Collections
    
 */
module Doremir.Map 
{
    import Doremir;
    import Doremir.Pair;
    import Doremir.List;
    import Doremir.String;
    
    type Map = opaque;
    type Key = Ptr;

    // Constructors
    empty            : () -> Map;
    copy             : Map -> Map;
    destroy          : Map -> Void;

    // Size
    size             : Map -> Int;
    isEmpty          : Map -> Bool;
    isSingle         : Map -> Bool;

    // Lookup function
    add              : (Key, Ptr, Map) -> Map;
    remove           : (Key, Map) -> Map;
    get              : (Key, Map) -> Ptr;
    addEntry         : (Pair, Map) -> Map;
    removeEntry      : (Pair, Map) -> Map;

    // Predicates
    hasKey           : (Key, Map) -> Bool;
    hasElem          : (Ptr, Map) -> Bool;
    hasEntry         : (Pair, Map) -> Bool;
    isSubmapOf       : (Map, Map) -> Bool;
    isProperSubmapOf : (Map, Map) -> Bool;

    // Set operations
    sum              : (Map, Map) -> Map;
    product          : (Map, Map) -> Map;
    difference       : (Map, Map) -> Map;
    power            : Map -> Map;

    // Conversions   
    fromPair         : Pair -> Map;
    fromList         : List -> Map;
    toList           : Map -> List;

}
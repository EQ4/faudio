
/**
    @addtogroup DoremirSystemEvent
    
    Provides mouse and keyboard events.    
 */

module Doremir.System.Event
{
    import Doremir;
    import Doremir.Message;
    import Doremir.Event;
    import Doremir.String;

    type Type = enum {
        MouseMoveEvent,
        MouseDragEvent,
        MouseUpEvent,
        MouseDownEvent,
        KeyUpEvent,
        KeyDownEvent
    };              

    
    mouseMove    : () -> Event; // (Float, Float)
    mouseDrag    : () -> Event;
    mouseUp      : () -> Event;
    mouseDown    : () -> Event;
    keyUp        : () -> Event; // [KeyCode, Char, String]
    keyDown      : () -> Event;
    
    select       : List -> Event;       // [Int16/EventType]
    selectSender : List -> Sender;  // [Int16/EventType]
}


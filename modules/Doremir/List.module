
/** 
    @addtogroup DoremirList
    
    Immutable list data structure.

    @par Implements 
        doremir_equal_t
        doremir_order_t
        doremir_copy_t
        doremir_destroy_t
        doremir_dynamic_t
        doremir_string_show_t
    @see 
        \ref Collections
    
 */
module Doremir.List
{
    import Doremir;
    import Doremir.String;

    type List   = opaque;
            
    empty       : () -> List;
    single      : Ptr -> List;
    cons        : (Ptr, List) -> List;
    // snoc        : (Ptr, List) -> List;
    append      : (List, List) -> List;
    dappend     : (List, List) -> List;
    // dcons       : (Ptr, List) -> List;
    // dsnoc       : (Ptr, List) -> List;
    copy        : List -> List;
    destroy     : List -> Void;

    isEmpty     : List -> Bool;
    isSingle    : List -> Bool;
    length      : List -> Int;
    head        : List -> Ptr;
    tail        : List -> List;
    init        : List -> List;
    last        : List -> Ptr;
    take        : (Int, List) -> List;
    drop        : (Int, List) -> List;
    range       : (Int, Int, List) -> List;
    removeRange : (Int, Int, List) -> List;
    
    has         : (Ptr, List) -> Bool;
    find        : (Pred, List) -> Ptr;
    findIndex   : (Pred, List) -> Int;
    filter      : (Pred, List) -> List;
    reverse     : List -> List;
    sort        : List -> List;

    map         : (Unary, List) -> List;
    foldLeft    : (Binary, Ptr, List) -> Ptr;
    
    // sum         : List -> Ptr;
    // product     : List -> Ptr;
    // maximum     : List -> Ptr;
    // minimum     : List -> Ptr;                                
    concat      : List -> List;

    equal       : (List, List) -> Bool;
    lessThan    : (List, List) -> Bool;
    greaterThan : (List, List) -> Bool;
    show        : List -> String;
}
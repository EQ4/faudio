
/**
    Provides atomic variables
    
    @defgroup   DoremirAtomic Concurrency: Atomic variables
    @author     Hans HÃ¶glund
 */
module Doremir.Atomic
{
    type Atomic = IntPtr;
    type Updater = (IntPtr) -> IntPtr;
    
    create  : () -> Atomic;
    destroy : (Atomic) -> Void;
    copy    : (Atomic) -> Atomic;
    swap    : (Atomic, Atomic) -> Void;
    
    get : (Atomic) -> IntPtr;
    set : (Atomic, IntPtr) -> Void;
    modify : (Atomic, Updater) -> Void;
}


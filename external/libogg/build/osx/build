
git submodule init   external/libogg/source;
git submodule update external/libogg/source;

pushd external/libogg/source;

CFLAGS="-arch i386" \
CXXFLAGS="-arch i386" \
LDFLAGS="-arch i386" \
./configure \
    --prefix=`pwd`/../result \
	  && make \
	  && make install

# 	  && cp -R include/ ../result/include/

popd;
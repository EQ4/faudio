#!/bin/bash
git submodule init external/gtest/source;
git submodule update external/gtest/source;

pushd external/gtest/source;

mkdir -p build \
	&& pushd build \
	&& cmake .. \
		-G "MSYS Makefiles" \
		-D gtest_disable_pthreads=True .. \
	&& make \
	&& popd \
	&& mkdir -p 				../result/include \
	&& mkdir -p 				../result/lib \
	&& mv build/libgtest.a	 	../result/lib \
	&& cp -R include 			../result;

popd;


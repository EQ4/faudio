#!/bin/bash
git submodule init   external_libraries/portaudio/source;
git submodule update external_libraries/portaudio/source;

pushd external_libraries/portaudio/source;

CFLAGS="-arch i386" \
CXXFLAGS="-arch i386" \
LDFLAGS="-arch i386" \
./configure \
    --prefix=`pwd`/../result \
    --enable-mac-universal \
	  && make \
	  && make install \
	  && cp -R include/ ../result/include/

popd;
